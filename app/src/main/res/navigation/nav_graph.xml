<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragment_camera">

    <fragment
        android:id="@+id/fragment_camera"
        android:name="ca.bcit.comp3717.snappie.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera">
        <action
            android:id="@+id/action_fragment_camera_to_fragment_explore"
            app:destination="@id/fragment_explore" />
    </fragment>
    <fragment
        android:id="@+id/fragment_album"
        android:name="ca.bcit.comp3717.snappie.AlbumFragment"
        android:label="fragment_album"
        tools:layout="@layout/fragment_album" >
        <action
            android:id="@+id/action_fragment_album_to_fragment_camera"
            app:destination="@id/fragment_camera" />
    </fragment>
    <fragment
        android:id="@+id/fragment_explore"
        android:name="ca.bcit.comp3717.snappie.ExploreFragment"
        android:label="fragment_explore"
        tools:layout="@layout/fragment_explore" />
</navigation>